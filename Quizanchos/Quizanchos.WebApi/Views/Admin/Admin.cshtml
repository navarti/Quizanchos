@{
    ViewData["Title"] = "Admin";
}

<div class="admin-dashboard container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <p class="card-text">
                        <strong>125</strong> Registered users
                    </p>
                    <a href="/Admin/Users" class="btn btn-primary">View Users</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Active Content</h5>
                    <p class="card-text">
                        <strong>58</strong> Published posts
                    </p>
                    <a href="/Admin/Content" class="btn btn-primary">Manage Content</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">System Logs</h5>
                    <p class="card-text">
                        View recent activity logs
                    </p>
                    <a href="/Admin/Logs" class="btn btn-primary">View Logs</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Admin Settings</h5>
                    <p class="card-text">
                        Configure system and permissions
                    </p>
                    <a href="/Admin/Settings" class="btn btn-secondary">Go to Settings</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">FAQ Management</h5>
                    <p class="card-text">
                        Update and manage FAQs
                    </p>
                    <a href="/Admin/FAQ" class="btn btn-secondary">Manage FAQ</a>
                </div>
            </div>
        </div>
    </div>
</div>
