@{
    ViewData["Title"] = "Admin Signin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body>
<div class="signin-container">
    <div class="signin-card">
        <h1 class="title">Admin Sign In</h1>
        <p class="subtitle">Enter your credentials to access the admin panel</p>

        <form id="signinAdminForm" class="signin-form">
            <div class="form-group">
                <label for="signinAdminEmail">Email:</label>
                <input type="email" id="signinAdminEmail" name="email" required placeholder="Enter your email" class="form-control input-field" />
                <span id="signinAdminEmailError" class="error-message" style="display:none;"></span>
            </div>
            <div class="form-group">
                <label for="signinAdminPassword">Password:</label>
                <input type="password" id="signinAdminPassword" name="password" required placeholder="Enter your password" class="form-control input-field" />
                <span id="signinAdminPasswordError" class="error-message" style="display:none;"></span>
            </div>
            <button type="button" id="signinAdminButton" class="btn btn-primary btn-block submit-button">Sign In</button>
        </form>
    </div>
</div>

<div id="errorModal" class="modal">
    <div class="modal-content">
        <span class="close-btn" id="closeModal">&times;</span>
        <h2 id="modalHeader">Notification</h2>
        <p id="modalErrorText"></p>
    </div>
</div>
<script src="/js/common.js" asp-append-version="true"></script>
<script src="/js/adminsignin.js"></script>
</body>
</html>
