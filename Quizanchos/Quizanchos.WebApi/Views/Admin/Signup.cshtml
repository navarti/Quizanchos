@{
    ViewData["Title"] = "Admin Signup";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body>
<div class="container">
    <h1 class="title">Admin Signup</h1>

    <form id="registerAdminForm" class="signup-form">
        <div class="form-group">
            <label for="registerAdminEmail">Email:</label>
            <input type="email" id="registerAdminEmail" name="email" required placeholder="Enter your email" class="input-field" />
            <span id="registerAdminEmailError" class="error-message" style="display:none;"></span>
        </div>
        <div class="form-group">
            <label for="registerAdminPassword">Password:</label>
            <input type="password" id="registerAdminPassword" name="password" required placeholder="Enter your password" class="input-field" />
            <span id="registerAdminPasswordError" class="error-message" style="display:none;"></span>
        </div>
        <div class="form-group">
            <label for="registerAdminConfirmPassword">Confirm Password:</label>
            <input type="password" id="registerAdminConfirmPassword" name="confirmPassword" required placeholder="Confirm your password" class="input-field" />
            <span id="registerAdminConfirmPasswordError" class="error-message" style="display:none;"></span>
        </div>
        <button type="button" id="registerAdminButton" class="submit-button">Register</button>
    </form>

    <div id="errorModal" class="modal">
        <div class="modal-content">
            <span class="close-btn" id="closeModal">&times;</span>
            <h2 id="modalHeader">Notification</h2>
            <p id="modalErrorText"></p>
        </div>
    </div>
</div>
<script src="/js/common.js" asp-append-version="true"></script>
<script src="/js/admin.js"></script>
</body>
</html>
