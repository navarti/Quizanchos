@{
    ViewData["Title"] = "Sign Up";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - Quizanchos</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/site.css">
</head>
<body>
<div class="signup-page">
    <div class="signup-form">
        <h2>Sign Up</h2>
        <p>Your registration is a pleasure for us. Sign up in 2 minutes and start fighting for the 1st place of the month.</p>
        
        <div class="google-signup-container">
            <button class="google-signup-btn" onclick="window.location.href='/GoogleAuth/SignIn'" >
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/c1/Google_%22G%22_logo.svg/768px-Google_%22G%22_logo.svg.png" alt="Google Icon" width="18" height="18" />
                Sign up with Google
            </button>
        </div>
        
        <div class="separator">
            <span>or</span>
        </div>

            <form id="signupForm" novalidate>
                <div class="form-group">
                    <label for="email">Your email address</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Email" required />
                    <small class="error-message" id="emailError"></small>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Password" required />
                    <small class="error-message" id="passwordError"></small>
                </div>
                <div class="form-group">
                    <label for="repeatPassword">Repeat password</label>
                    <input type="password" id="repeatPassword" name="repeatPassword" class="form-control" placeholder="Repeat Password" required />
                    <small class="error-message" id="repeatPasswordError"></small>
                </div>
                <button type="button" id="submitButton" class="btn btn-primary">Submit</button>
            </form>

        <div id="errorModal" class="modal" style="display: none;">
            <div class="modal-content">
                <span class="close-btn" id="closeModal">&times;</span>
                <h2 id="modalHeader">Notification</h2>
                <p id="modalErrorText"></p>
                <div id="modalButtons" class="modal-buttons"></div>
            </div>
        </div>
        <div id="verifyModal" class="verify-modal">
            <div class="verify-modal-content">
                <button class="modal-close" onclick="closeVerifyModal()">&times;</button>
                <h2>Verify your email</h2>
                <p>We've sent a verification code to your email address.<br>Please enter it below to continue.</p>

                <div id="messageContainer" class="message-container"></div> 

                <div class="input-container">
                    <svg class="mail-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                        <polyline points="22,6 12,13 2,6"></polyline>
                    </svg>
                    <input id="codeInput" type="text" placeholder="Enter verification code" maxlength="6">
                </div>
                <span id="errorContainer" class="error-message"></span> 

                <div class="resend-container">
                    <p>Didn't receive the code?</p>
                    <button class="resend-btn" id="resendButton">Resend</button>
                </div>

                <button class="verify-btn" id="verifyButton">Verify Email</button>

                <p class="terms-text">
                    By signing up, you accept our
                    <a href="#" class="terms-link">Terms and Conditions</a> and
                    <a href="#" class="terms-link">Privacy Policy</a>.
                </p>
            </div>
        </div>
        
        <div class="signup-footer">
            By signing up, you accept our <a href="/terms">Terms and Conditions</a> and <a href="/privacy">Privacy Policy</a>.
        </div>
    </div>
</div>
    <script src="~/js/common.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
