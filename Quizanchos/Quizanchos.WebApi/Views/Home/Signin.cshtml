@{
    ViewData["Title"] = "Sign in";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In - Quizanchos</title>
    <link rel="stylesheet" href="/css/site.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body>
    <div class="signin-page">
        <div class="signin-form">
            <h2>Sign In</h2>
            <p>Welcome back! Sign in to continue and start competing for the top spot this month.</p>

            <!-- Google Sign-In Button -->
            <div class="google-signin-container">
                <button class="google-signin-btn" onclick="window.location.href='/GoogleAuth/SignIn'">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/c1/Google_%22G%22_logo.svg/768px-Google_%22G%22_logo.svg.png" alt="Google Icon" width="18" height="18">
                    Sign in with Google
                </button>
            </div>

            <div class="separator">
                <span>or</span>
            </div>

            <!-- Email and Password Form -->
            <form id="signinForm">
                <div class="form-group">
                    <label for="email">Your email address</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Password" required>
                </div>
                <div class="form-group text-right">
                    <a href="/Account/ForgotPassword" class="forgot-password-link">Forgot Password?</a>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Sign In</button>
            </form>

            <div class="signin-footer">
                <p>Don't have an account? <a href="/Signup">Sign up here</a>.</p>
            </div>
        </div>
    </div>

    <script src="/js/site.js" asp-append-version="true"></script>
</body>
</html>