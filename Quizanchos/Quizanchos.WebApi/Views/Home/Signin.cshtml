@{
    ViewData["Title"] = "Sign in";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In - Quizanchos</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/site.css">
</head>
<body>
    <div class="signin-page">
        <div class="signin-form">
            <h2>Sign In</h2>
            <p>Welcome back! Sign in to continue and compete for the top spot this month.</p>

            <div class="google-signin-container">
                <button class="google-signin-btn" onclick="window.location.href='/GoogleAuth/SignIn'">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/c1/Google_%22G%22_logo.svg/768px-Google_%22G%22_logo.svg.png" alt="Google Icon" width="18" height="18">
                    Sign in with Google
                </button>
            </div>

            <div class="separator">
                <span>or</span>
            </div>

            <form>
                <div class="form-group">
                    <label for="email">Your email address</label>
                    <input type="email" id="signinEmail" name="email" placeholder="Email" required>
                    <small class="error-message" id="signinEmailError"></small> 
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="signinPassword" name="password" placeholder="Password" required>
                    <small class="error-message" id="signinPasswordError"></small> 
                </div>
                <a href="#" class="forgot-password">Forgot Password?</a>
                <button type="submit" class="btn btn-primary" id="signinButton">Sign In</button>
            </form>

            <div id="errorModal" class="modal" style="display: none;">
                <div class="modal-content">
                    <span class="close-btn" id="closeModal">&times;</span>
                    <h2 id="modalHeader">Notification</h2>
                    <p id="modalErrorText"></p>
                    <div id="modalButtons" class="modal-buttons"></div>
                </div>
            </div>


            <div class="signin-footer">
                Don’t have an account? <a href="/Signup">Sign up here.</a>
            </div>
        </div>

    </div>


    <script src="/js/common.js" asp-append-version="true"></script>
    <script src="/js/signin.js" asp-append-version="true"></script>
</body>
</html>