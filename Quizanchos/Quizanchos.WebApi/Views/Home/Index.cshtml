@model HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="quiz-section">
    <h1 class="quiz-title">Quizzes</h1>
    <p class="quiz-subtitle">Get your first 100 points on your first quiz!</p>
    <div class="quiz-cards">
        @foreach (var quiz in Model.QuizCategories)
        {
            <div class="quiz-card">
                <img src="https://img.freepik.com/premium-photo/world-population-day-background-wallpaper-copy-space_931022-6883.jpg" alt="@quiz.Name" class="quiz-image">
                <div class="quiz-info">
                    <div class="quiz-meta">
                        <span class="quiz-date">15 Feb 2024</span>
                        <span class="quiz-category">@quiz.Name</span>
                        <span class="quiz-author">Adam Smith</span>
                    </div>
                    <h2 class="quiz-name">Sample Quiz</h2>
                    <p class="quiz-description">This is a sample description for a quiz...</p>
                    <a href="/Quiz/Setup/@quiz.Id" class="quiz-link">GO →</a>
                </div>
            </div>
        }
    </div>
</div>
